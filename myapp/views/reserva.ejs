<!DOCTYPE html>
<html lang="es">

<head>
    <!-- Configuración del documento -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Enlaces a archivos de estilo externos -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/nav.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/home.css">
    <!-- Enlaces a bibliotecas de Bootstrap y Bootstrap Icons desde un CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <!-- Título de la página y favicon -->
    <title>UCM | Reservar</title>
    <link rel="icon" href="/images/icon.png" type="image/x-icon">
</head>

<body>
    <%- include('header.ejs') %>

        <main class="container mt-4">
            <% if (session.rol === '1') { %>
                <h2 class="text-center mb-4">Historial de Reservas</h2>
            <% } else { %>
                <h2 class="text-center mb-4">Reservar Instalación</h2>
            <% } %>            
            <!-- Información de las instalaciones y formulario de reserva en la misma fila -->
            <div class="row justify-content-center">
                <!-- Información de la instalación (primera columna) -->
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <!-- Columna para la imagen (arriba) -->
                            <div class="col-md-12">
                                <img src="data:image/jpg;base64, <%= results.imagen.toString('base64') %>" class="card-img-top w-100 object-fit-cover" alt="<%= results.nombre %>">
                            </div>
                            <!-- Columna para el contenido de la tarjeta (debajo de la imagen) -->
                            <div class="col-md-12">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= results.nombre %>
                                    </h5>
                                    <p class="card-text">Tipo de reserva: <%= results.tipoReserva %>
                                    </p>
                                    <p class="card-text">Aforo: <%= results.aforo %> personas</p>
                                    <p class="card-text">Horario: <%= results.horaInicio %> - <%= results.horaFin %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Historial de reservas (segunda columna) -->
                <div class="col-md-6">
                    <% if (session.rol==='1') { %>
                        <!-- Contenedor del historial de reservas con scrollbar -->
                        <div class="reserva-container mt-2">
                            <% reservas.forEach(reserva => { %>
                                <!-- Tarjeta de reserva -->
                                <div class="card mb-2">
                                    <div class="card-body ">
                                        <div class="text-start">
                                            <h5 class="card-title">Reserva </h5>
                                            <div class ="d-flex justify-content-between mt-3">
                                                <p class="card-text">Email: <%= reserva.usuEmail %></p>
                                                <p class="card-text me-3">Día: <%= reserva.dia %></p>
                                                <p class="card-text me-3">Hora: <%= reserva.hora %></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>                            
                        </div>
                    <% } else { %>
                        <!-- Formulario de reserva -->
                        <% if (mensaje==null) { %>
                            <% } else if(mensaje) { %>
                                <div class="alert alert-success bg-gradient text-dark" role="alert">
                                    <%= mensaje %>
                                </div>
                        <% } %>
                        <form onsubmit="return validarFormulario()" action="/realizar_reserva" method="POST">
                            <div class="mb-5">
                                <label for="dia" class="form-label text-start">Día de la Reserva</label>
                                <input type="date" class="form-control" id="dia" name="dia" required>
                            </div>
                            <div class="mb-5">
                                <label for="hora" class="form-label text-start">Hora de la Reserva</label>
                                <select class="form-select" id="hora" name="hora" required>
                                    <!-- Aquí se generan dinámicamente las opciones de horas cada media hora -->
                                    <% for (var hora = new Date('1970-01-01T' + results.horaInicio + ':00'); hora <= new Date('1970-01-01T' + results.horaFin + ':00'); hora.setMinutes(hora.getMinutes() + 30)) { %>
                                        <option value="<%= hora.getHours().toString().padStart(2, '0') + ':' + hora.getMinutes().toString().padStart(2, '0') %>">
                                            <%= hora.getHours().toString().padStart(2, '0') + ':' + hora.getMinutes().toString().padStart(2, '0') %>
                                        </option>
                                    <% } %>
                                </select>
                            </div>                
                            <input type="hidden" id="instalacionId" name="instalacionId" value="<%= results.Id %>">
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-dark btn p-2">Reservar</button>
                            </div>
                        </form>
                    <% } %>
                </div>
            </div>
        </main>

        <!-- Inclusión del pie de página -->
        <%- include('footer.ejs') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script src="ruta/a/jquery.min.js"></script>
        <!-- Popper.js -->
        <script src="ruta/a/popper.min.js"></script>
        <!-- Bootstrap JS Bundle -->
        <script src="ruta/a/bootstrap.bundle.min.js"></script>
        <script>
            function validarFormulario() {
                var fechaReserva = new Date(document.getElementById('dia').value);
                var fechaActual = new Date();
                // Compara las fechas
                if (fechaReserva < fechaActual) {
                    alert('La fecha de reserva debe ser posterior a la fecha actual.');
                    return false; // Evita que el formulario se envíe
                }
                return true; // Permite que el formulario se envíe
            }
        </script>

    </body>

</html>
