<!-- Encabezado de la página -->
<header class="container-fluid container-header">
    <!-- Columna 2 con el logo y el nombre del sitio -->
    <div class="col col-6 d-flex align-items-center">
        <!-- Enlace al inicio con el nombre del sitio como botón -->
        <a href="/" class="btn text-dark border-0 ms-4">
            <!-- Título del sitio -->
            <img src="../images/logo.png" class="img" alt="Imagen">
        </a>
    </div>
    <!-- Columna 3 con el formulario de búsqueda -->
    <div class="col col-5">
        <!-- Formulario de búsqueda -->
        <form action="/buscar" method="get">
            <!-- Contenedor para la caja de búsqueda y el botón de búsqueda -->
            <div class="buscador">
                <!-- Caja de búsqueda -->
                <input id="busquedaGlobal" type="search" class="caja" placeholder="Buscar instalaciones..." name="nombreBuscar" required>
                <!-- Botón de búsqueda -->
                <button class="boton" type="submit"><i class="bi bi-search"></i></button>
            </div>
        </form>
    </div>
    <div class="col col-1">
        <div class="mb-1">
            <!-- Imagen del login -->
            <a href="/login" class="btn text-dark border-0">
                <button class="boton" type="login"><i class="bi bi-person-circle"></i></button>
            </a>
        </div>
    </div>
</header>

